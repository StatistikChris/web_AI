//include canvas.html

doctype html
html(lang='en')  
  head  
    title Canvas Drawing  
    link(src="https://fonts.googleapis.com/css?family=Roboto",rel='stylesheet')
    style
      include css/style.css 
    script
      include js/canvas.js 
    script(src="https://code.jquery.com/jquery-3.4.1.min.js")
  body(onload="startup();",font-family="Roboto") 
    h2 Draw a number on the canvas below:
    p
      div(align="left")
        canvas(id="myCanvas",width="280",height="280",style="border:2px solid black")
      br/
      input(
        type="button" 
        id="clearArea" 
        value="Clear Area"
        onclick="javascript:clearArea();return false;"
      )
      p Line width 
        select(id="selWidth")
          option(value="3") 3
          option(value="11") 11
          option(value="13") 13
          option(value="15",selected="selected") 15
          option(value="17") 17
          option(value="19") 19
      
      p Color
        select(id="selColor")
          option(value="black",selected="selected") black


    p
      input(
        type="button" 
        id="prepareInput" 
        value="Prepare"
        onclick="prepareInput()"
      )
    div(class="output")
    div(id="preview-container")  
      p Preview:
      div(id="preview")
    input(
        type="button" 
        id="buildInference" 
        value="Infer"
        onclick="javascript:buildInference();"
      )